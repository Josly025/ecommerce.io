<!--Create Product Inputs-->
<div
  class="uk-child-width-1-1 uk-text-center uk-position-center uk-margin-large-top"
  uk-grid
  uk-height-match="target: > div > .uk-card"
>
  <div class="newProduct">
    <div class="uk-card uk-card-default uk-card-body newProduct__card">
      <!--multipart takes off default encoding type-->
      <form method="POST" enctype="multipart/form-data">
        <div class="uk-margin uk-text-center">
          <h3 class="newProduct__title uk-margin-medium-bottom">
            Create Product
          </h3>
          <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: info"></span>
            <input
              class="uk-input newProduct__input"
              type="title"
              id="title"
              name="title"
              placeholder="Product Title"
            />
          </div>
        </div>

        <div class="uk-margin uk-text-center">
          <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon uk-form-icon" uk-icon="icon: tag"></span>
            <input
              class="uk-input newProduct__input"
              type="price"
              id="price"
              name="price"
              placeholder="Product Price"
            />
          </div>
        </div>
        <!--drop area ui kit-->
        <div class="js-upload" uk-form-custom>
          <input type="file" name="image" multiple />
          <button
            class="uk-button uk-button-default uk-margin-medium-bottom newProduct__upload"
            type="button"
            tabindex="-1"
          >
            Browse Files
          </button>
        </div>
        <br />
        <!--product submit-->
        <button
          type="submit"
          class="uk-button uk-button-primary newProduct__btn uk-width-1-1"
        >
          Create Product
        </button>
      </form>
    </div>
  </div>
</div>
