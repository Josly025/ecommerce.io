<%- include ("./partials/messages"); %>
<div class="body__inital">
  <div
    class="body__login uk-child-width-1-3@m uk-grid-medium uk-grid-match uk-margin-large-top uk-flex uk-flex-center"
    uk-grid
  >
    <div class="uk-card uk-card-secondary uk-card-body" id="card__login">
      <form action="/users/login" method="POST">
        <div class="uk-margin uk-text-center">
          <h3 class="uk-card-title text__title">Login</h3>

          <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input
              class="uk-input"
              type="email"
              id="email"
              name="email"
              placeholder="Enter Email"
            />
          </div>
        </div>

        <div class="uk-margin uk-text-center">
          <div class="uk-inline">
            <span
              class="uk-form-icon uk-form-icon-flip"
              uk-icon="icon: lock"
            ></span>
            <input
              class="uk-input"
              type="password"
              id="password"
              name="password"
              placeholder="Enter Password"
            />
          </div>
        </div>

        <button
          type="submit"
          id="btn__login"
          class="uk-button uk-button-primary inital-btn"
        >
          Login
        </button>
      </form>

      <p class="uk-text-center text__transition">
        Don't have an account?<a
          class="text__transition--anchor"
          href="/users/signup"
          >Sign Up</a
        >
      </p>
    </div>
  </div>
</div>
