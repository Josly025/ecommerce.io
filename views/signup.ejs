<div class="signup">
  <%- include ("./partials/messages"); %>
  <div
    class="uk-child-width-1-3@m uk-grid-medium uk-grid-match uk-flex uk-flex-center"
    uk-grid
  >
    <div class="uk-card uk-card-body glass signup__card">
      <form action="/users/signup" method="POST">
        <div class="uk-margin uk-text-center">
          <h3 class="uk-card-title signup__title">create an account</h3>
          <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input
              type="name"
              id="name"
              name="name"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
              class="uk-input signup__input"
            />
          </div>
        </div>

        <div class="uk-margin uk-text-center">
          <div class="uk-inline">
            <span class="uk-form-icon" uk-icon="icon: user"></span>
            <input
              class="uk-input signup__input"
              type="email"
              id="email"
              name="email"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
        </div>

        <div class="uk-margin uk-text-center">
          <div class="uk-inline">
            <span
              class="uk-form-icon uk-form-icon-flip"
              uk-icon="icon: lock"
            ></span>
            <input
              class="uk-input signup__input"
              type="password"
              id="password"
              name="password"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
        </div>

        <div class="uk-margin uk-text-center">
          <div class="uk-inline">
            <span
              class="uk-form-icon uk-form-icon-flip"
              uk-icon="icon: lock"
            ></span>
            <input
              class="uk-input signup__input"
              type="password"
              id="password2"
              name="password2"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
        </div>
        <button
          type="submit"
          id="btn__signup"
          class="uk-button uk-button-primary signup__btn"
        >
          Login
        </button>
      </form>

      <p class="uk-text-bold-secondary uk-text-center signup__text">
        Already have an account?<a
          href="/users/login"
          class="text-info signup__anchor"
        >
          Login</a
        >
      </p>
    </div>
  </div>
</div>
